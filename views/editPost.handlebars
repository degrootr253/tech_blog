<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" id="edit-title" value="{{post.title}}" class="form-input" />
        <label class="form-label" for="content">Content</label>
        <input name="content" type="text" id="content" value="{{post.content}}" class="form-input" />
        <button type="submit" id="update-btn" class="btn">Update Post</button>
        <button type="button" id="delete-post" data-id="{{post.id}}"class="delete-post-btn btn">Delete Post</button>
    </form>
</div>


<script src="/javascript/editPost.js"></script>
<script src="/javascript/deletePost.js"></script>